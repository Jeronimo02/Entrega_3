    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int horas;
        double retencion, pago;
        String nombre;
        horas = Integer.parseInt(IntHoras.getText());
        retencion = Double.parseDouble(DobleRetencion.getText());
        pago = Double.parseDouble(DoblePago.getText());
        nombre = TxtNombre.getText();
        salida_1.setText("El salario bruto semanal de "+ nombre +  "es de= $" + horas*pago); 
        salida2.setText("La retencion en la fuente es de= $" + horas*pago*(retencion/100));
        salida_3.setText("El salario neto es= $" + (horas*pago- (horas*pago*(retencion/100))));
    }                                        

