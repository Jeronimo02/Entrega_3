    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String nombre;
        double salario, pago;
        int horas;
        nombre = datNombre.getText();
        salario = Double.parseDouble(datSalario.getText());
        horas = Integer.parseInt(datHoras.getText());
        pago = salario*horas;
        if (pago>450000){
            salida.setText(nombre+": salario= "+pago);
        }
        else {
            salida.setText(nombre);
        }
    }                                        

