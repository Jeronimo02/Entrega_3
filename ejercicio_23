    private void calcularActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double a, b, c, determinante, x1, x2;
        a = Double.parseDouble(datA.getText());
        b = Double.parseDouble(datB.getText());
        c = Double.parseDouble(datC.getText());
        determinante = (Math.pow(b,2)-4*a*c);
                if (a==0 && b==0 && c==0){
            salida.setText("X puede tomar cualquier valor");
        }
        else if (a==0 && b==0 & c!=0){
            salida.setText("no hay solucion posible");
        }
        else if (a==0 && b!=0){
            x1=x2= -c/b;
            salida.setText("Las soluciones son x1: " + x1 + " y x2: " + x2);
        }
        else if (determinante>0){
            x1=(-b+Math.sqrt(determinante))/(2*a);
            x2=(-b-Math.sqrt(determinante))/(2*a);
            salida.setText("Las soluciones son x1: " + x1 + " y x2: " + x2);
        }
        else if (determinante==0){
            x1=x2= -b/(2*a);
            salida.setText("Las soluciones son x1: " + x1 + " y x2: " + x2);
        }
        else {
            determinante=Math.abs(determinante);
            x1=(-b+Math.sqrt(determinante))/(2*a);
            x2=(-b-Math.sqrt(determinante))/(2*a);
            salida.setText("Las soluciones son x1: " + x1 + " y x2: " + x2);
        }
    }                                        

