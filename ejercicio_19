    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double lado;
        lado = Double.parseDouble(doLado.getText());
        salida1.setText("El perimetro del triangulo es de: " + lado * 3 + "cm");
        salida2.setText("la altura del triangulo es de: " + Math.pow(3,-2)*lado/2 + "cm");
        salida3.setText("El area del triangulo es de: " + Math.pow(lado, 2)*Math.pow(3, -2)/4 + "cm");
    }                                        

