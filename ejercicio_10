    private void calcularActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double pago, patrimonio;
        String nombre;
        int estrato, inscripcion;
        nombre = datNombre.getText();
        estrato = Integer.parseInt(datEstrato.getText());
        inscripcion = Integer.parseInt(datNumeroInscripcion.getText());
        patrimonio = Double.parseDouble(datPatrimonio.getText());
        pago = 50000;
        if (patrimonio>2000000 && estrato>3){
            pago = pago + 0.03 * patrimonio;
        }
        salida.setText("El valor a pagar por el estudiante " + nombre + " con el numero de inscripcion " + inscripcion + " es de " + pago + " pesos");
    }                                        

